{
  "name": "woonyong-kr.github.io",
  "private": true,
  "version": "1.0.0",
  "description": "Jekyll + Tailwind v4 (CLI) setup",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/style.css -o ./assets/css/site.css",
    "watch:css": "tailwindcss -i ./assets/css/style.css -o ./assets/css/site.css --watch",
    "serve": "bundle exec jekyll serve --livereload --incremental",
    "clean": "bundle exec jekyll clean",
    "build": "npm run build:css && bundle exec jekyll build",
    "start": "npm-run-all -p watch:css serve"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.13",
    "cssnano": "^6.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-nested": "^6.2.0",
    "tailwindcss": "^4.1.13"
  }
}
